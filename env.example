# AMC API Configuration
AMC_API_KEY=your_amc_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# MCP Configuration
MCP_CLIENT_TOKEN=your_mcp_client_token_here

# Integration Testing (Optional)
# Set these to run integration tests with real credentials
AMC_TEST_EMAIL=your_amc_email@example.com
AMC_TEST_PASSWORD=your_amc_password
AMC_TEST_ZIP=12345

# Test Mode Configuration (Optional)
# Default: AMC_TEST_DRY_RUN=true (safe mode - no actual purchases)
# Set to false to enable live testing mode
AMC_TEST_DRY_RUN=true

# A-List Testing (Optional - Uses free movie reservations)
# Set to true to use AMC Stubs A-List benefits instead of payment
AMC_TEST_USE_ALIST=true

# A-List Test Data (Optional - Required for full reservation testing)
# Get these from AMC website when selecting a movie/showtime
# Theater ID: Theater slug from URL like 'amc-century-city-15'
# Showtime ID: Number from URL like '135683165'
AMC_TEST_THEATER_ID=amc-century-city-15
AMC_TEST_SHOWTIME_ID=135683165

# Browser Visibility Control (Optional)
# Set to true to run browser in headless mode (invisible)
# Default: false (visible browser window for live viewing)
AMC_TEST_HEADLESS=false

# Browser Action Speed (Optional)
# Milliseconds to slow down each action for better visibility
# Default: 1000ms (1 second delay between actions)
AMC_TEST_SLOW_MO=1000

# Live Purchase Testing (Optional - USE WITH EXTREME CAUTION)
# Only set to true if you want tests to actually complete purchases
# Requires valid test card details below
AMC_TEST_ENABLE_PURCHASE=false

# Test Payment Method (Required only if AMC_TEST_ENABLE_PURCHASE=true)
# Use test card numbers or prepaid cards for safety
AMC_TEST_CARD_NUMBER=4111111111111111
AMC_TEST_CARD_EXPIRY=12/25
AMC_TEST_CARD_CVV=123 