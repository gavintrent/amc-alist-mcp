{
  "name": "amc-mcp-server",
  "version": "0.1.0",
  "description": "An MCP (Model Context Protocol) server that integrates with AMC Theatres APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:integration:api": "jest tests/integration/api",
    "test:integration:playwright": "jest tests/integration/playwright",
    "test:integration:e2e": "jest tests/integration/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
